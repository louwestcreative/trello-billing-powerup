{
  "manifest_version": 1,
  "name": "Trello Billing Power-Up",
  "description": "Track payments, owed amounts, and billing info per card.",
  "author": "Lou West Creative",
  "api_version": 1,
  "permissions": ["read", "write", "account"],
  "capabilities": {
    "card-buttons": {
      "callback": "cardButtonsCallback"
    },
    "card-badges": {
      "callback": "cardBadgesCallback"
    },
    "card-back-section": {
      "url": "https://louwestcreative.github.io/trello-billing-powerup/payment-entry.html",
      "height": 250,
      "title": "Billing Info"
    }
  }
}
