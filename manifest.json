{
  "manifest_version": 1,
  "name": "Trello Billing Power-Up",
  "description": "Add client payments, track billing activity, and show payment badges on cards.",
  "author": "Lou West Creative",
  "homepage": "https://louwestcreative.github.io/trello-billing-powerup/",
  "icon": {
    "url": "https://louwestcreative.github.io/trello-billing-powerup/icon.png"
  },

  "capabilities": [
    "card-buttons",
    "card-badges",
    "show-settings"
  ],

  "connectors": {
    "iframe": {
      "url": "https://louwestcreative.github.io/trello-billing-powerup/client.html"
    }
  },

  "settings": {
    "headerColor": "blue",
    "iframe": {
      "url": "https://louwestcreative.github.io/trello-billing-powerup/settings.html",
      "height": 240
    }
  },

  "scopes": [
    "read",
    "write",
    "account"
  ],

  "authorization": {
    "type": "none"
  }
}
